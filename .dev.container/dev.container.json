{
  "name": "Java Dev Container",
  "image": "mcr.microsoft.com/devcontainers/java:17",
  "features": {
    "ghcr.io/devcontainers/features/java:1": {
      "version": "17"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "redhat.java",
        "vscjava.vscode-java-debug",
        "vscjava.vscode-java-dependency",
        "vscjava.vscode-maven"
      ],
      "settings": {
        "java.project.sourcePaths": [
          "java_basics/ex1_first_steep/src",
          "java_basics/ex2_Input_output/Scanner/src",
          "java_basics/ex2_Input_output/Formaters/src",
          "java_basics/ex3_oop_basic/ex01_product_class/src",
          "java_basics/ex3_oop_basic/ex02_triangle_class/src",
          "java_basics/ex3_oop_basic/ex03_student_class/src",
          "java_basics/ex3_oop_basic/ex04_convert_coin/src",
          "java_basics/ex3_oop_basic/ex05_bank_account/src",
          "java_basics/ex5_list/ex2_employee_problem/src",
          "java_basics/ex6_matrix/ex1_simple_exercise/src",
          "java_basics/ex6_matrix/ex2_matrix_problem/src"
        ],
        "java.project.outputPath": "bin"
      }
    }
  },
  "remoteUser": "vscode"
}